{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "target": "ES2019",
      "module": "commonjs",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    }
  }
}
