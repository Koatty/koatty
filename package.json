{
    "name": "koatty",
    "version": "3.4.12",
    "description": "Koa2 + Typescript = koatty. Use Typescript's decorator implement auto injection.",
    "scripts": {
        "build": "del-cli --force dist && tsc",
        "eslint": "eslint --ext .ts,.js ./",
        "prepublishOnly": "npm test && npm run build",
        "release": "npm run prepublishOnly && standard-version",
        "pub": "git push --follow-tags origin  && npm publish",
        "test": "npm run eslint && jest --passWithNoTests",
        "test:cov": "jest --collectCoverage --detectOpenHandles",
        "version": "conventional-changelog -p angular -i CHANGELOG.md -s"
    },
    "main": "./dist/index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/thinkkoa/koatty.git"
    },
    "keywords": [
        "web",
        "typescript",
        "framework",
        "mvc",
        "koa2",
        "restful",
        "agile",
        "koatty",
        "thinkkoa"
    ],
    "engines": {
        "node": ">10.0.0"
    },
    "author": {
        "name": "richenlin",
        "email": "richenlin@gmail.com"
    },
    "license": "BSD-3-Clause",
    "bugs": {
        "url": "https://github.com/thinkkoa/koatty/issues"
    },
    "homepage": "https://github.com/thinkkoa/koatty",
    "maintainers": [
        {
            "name": "richenlin",
            "email": "richenlin@gmail.com"
        }
    ],
    "devDependencies": {
        "@babel/core": "^7.x.x",
        "@babel/plugin-proposal-decorators": "^7.x.x",
        "@babel/preset-env": "^7.x.x",
        "@babel/preset-typescript": "^7.x.x",
        "@commitlint/cli": "^12.x.x",
        "@commitlint/config-conventional": "^15.x.x",
        "@types/jest": "^27.x.x",
        "@types/koa": "^2.x.x",
        "@types/koa__router": "^8.0.9",
        "@types/node": "^16.x.x",
        "@types/uuid": "^8.3.3",
        "@types/ws": "^8.2.0",
        "@typescript-eslint/eslint-plugin": "^5.x.x",
        "@typescript-eslint/parser": "^5.x.x",
        "conventional-changelog-cli": "^2.x.x",
        "del-cli": "^4.x.x",
        "eslint": "^8.x.x",
        "eslint-plugin-jest": "^25.x.x",
        "husky": "^7.x.x",
        "jest": "^27.x.x",
        "jest-html-reporters": "^2.x.x",
        "standard-version": "^9.x.x",
        "ts-jest": "^27.x.x",
        "ts-node": "^10.x.x",
        "typescript": "^4.x.x"
    },
    "dependencies": {
        "globby": "^11.0.4",
        "koa": "^2.13.4",
        "koatty_container": "^1.6.8",
        "koatty_core": "^1.3.38",
        "koatty_exception": "^1.0.6",
        "koatty_lib": "^1.2.6",
        "koatty_logger": "^1.2.6",
        "koatty_payload": "^1.3.10",
        "koatty_router": "^1.5.12",
        "koatty_serve": "^1.3.10",
        "koatty_trace": "^1.4.26",
        "reflect-metadata": "^0.1.13",
        "tslib": "^2.3.1",
        "uuid": "^8.3.2"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
